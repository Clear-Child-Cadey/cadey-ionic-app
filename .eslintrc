{
  "parser": "@typescript-eslint/parser",
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "tsx": true
    }
  },
  "rules": {
    "no-console": "off",
    "no-debugger": "off",
    "quotes": ["error", "single", { "avoidEscape": true }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": [".eslintrc", ".eslintrc.js"],
      "rules": {
        "comma-dangle": "off"
      }
    }
  ]
}
